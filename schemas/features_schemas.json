{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Features Service Schemas",
  "description": "Input and output schemas for the feature extraction service",
  "definitions": {
    "features_output": {
      "type": "object",
      "properties": {
        "batch_id": {
          "type": "string",
          "description": "Batch identifier"
        },
        "features": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "photo_id": {
                "type": "string",
                "description": "Photo identifier"
              },
              "tech": {
                "type": "object",
                "description": "Technical quality metrics",
                "properties": {
                  "sharpness": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1,
                    "description": "Sharpness score (Laplacian variance)"
                  },
                  "exposure": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1,
                    "description": "Exposure quality score"
                  },
                  "noise": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1,
                    "description": "Noise level (inverse quality)"
                  },
                  "horizon_deg": {
                    "type": "number",
                    "description": "Horizon tilt in degrees"
                  }
                },
                "required": ["sharpness", "exposure", "noise", "horizon_deg"]
              },
              "clip_labels": {
                "type": "array",
                "description": "Top 5 CLIP classification labels",
                "items": {
                  "type": "string",
                  "description": "CLIP label"
                },
                "minItems": 5,
                "maxItems": 5
              }
            },
            "required": ["photo_id", "tech", "clip_labels"]
          }
        }
      },
      "required": ["batch_id", "features"]
    }
  }
}
