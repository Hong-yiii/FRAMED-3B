{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ingest Service Schemas",
  "description": "Input and output schemas for the ingest service",
  "definitions": {
    "ingest_input": {
      "type": "object",
      "properties": {
        "batch_id": {
          "type": "string",
          "description": "Unique batch identifier"
        },
        "photos": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uri": {
                "type": "string",
                "description": "S3 URI to the photo"
              }
            },
            "required": ["uri"]
          }
        },
        "theme_spec_ref": {
          "type": "string",
          "description": "URI to theme specification"
        },
        "user_overrides": {
          "type": "object",
          "properties": {
            "lock_in": {
              "type": "array",
              "items": {"type": "string"},
              "description": "Photo IDs to force include"
            },
            "exclude": {
              "type": "array",
              "items": {"type": "string"},
              "description": "Photo IDs to force exclude"
            }
          }
        }
      },
      "required": ["batch_id", "photos", "theme_spec_ref"]
    },
    "ingest_output": {
      "type": "object",
      "properties": {
        "batch_id": {
          "type": "string",
          "description": "Batch identifier"
        },
        "photo_index": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "photo_id": {
                "type": "string",
                "description": "Content-addressable photo ID (hash)"
              },
              "original_uri": {
                "type": "string",
                "description": "Original photo URI"
              },
              "ranking_uri": {
                "type": "string",
                "description": "Processed photo URI in rankingInput directory"
              },
              "exif": {
                "type": "object",
                "description": "Extracted EXIF metadata",
                "properties": {
                  "camera": {
                    "type": "string",
                    "description": "Camera make and model"
                  },
                  "lens": {
                    "type": "string",
                    "description": "Lens information"
                  },
                  "iso": {
                    "type": ["number", "null"],
                    "description": "ISO speed rating"
                  },
                  "aperture": {
                    "type": "string",
                    "description": "Aperture setting"
                  },
                  "shutter_speed": {
                    "type": "string",
                    "description": "Shutter speed"
                  },
                  "focal_length": {
                    "type": "string",
                    "description": "Focal length"
                  },
                  "datetime": {
                    "type": ["string", "null"],
                    "description": "Date and time photo was taken"
                  },
                  "gps": {
                    "type": ["object", "null"],
                    "description": "GPS coordinates",
                    "properties": {
                      "lat": {
                        "type": ["number", "string"],
                        "description": "Latitude (decimal degrees or formatted string)"
                      },
                      "lon": {
                        "type": ["number", "string"],
                        "description": "Longitude (decimal degrees or formatted string)"
                      },
                      "alt": {
                        "type": ["number", "string"],
                        "description": "Altitude (meters or formatted string, optional)"
                      }
                    },
                    "required": ["lat", "lon"]
                  }
                }
              },
              "format": {
                "type": "string",
                "description": "Original file format extension (e.g., '.jpg', '.heic', '.png')",
                "pattern": "^\\.[a-zA-Z0-9]+$"
              }
            },
            "required": ["photo_id", "original_uri", "ranking_uri", "exif", "format"]
          }
        }
      },
      "required": ["batch_id", "photo_index"]
    }
  }
}
